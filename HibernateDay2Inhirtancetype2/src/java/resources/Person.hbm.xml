<hibernate-mapping>
    <class name="DAO.Person" table="person"
catalog="inheritance1">
<id name="id" column="id" type="int" >
<generator class="increment"/>
</id>
<property name="firstName" column="first_name" type="string"/>
<property name="lastName" column="last_name" type="string"/>
<union-subclass name="DAO.Student" table="student">
    <property name="department" column="department" type="string"/>
</union-subclass>
<union-subclass name="DAO.Teacher" table="teacher">
    <property name="hireDate" column="hire_date" type="date"/>
</union-subclass>
</class>
</hibernate-mapping>
